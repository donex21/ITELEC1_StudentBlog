<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ucpic"
        android:scaleType="center"
        android:id="@+id/ucpicaddStudent"/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/uclogo"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STUDENT LOG"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:paddingTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ucpicaddStudent"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD STUDENT"
            android:layout_margin="40dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"/>
        
        <EditText
            android:id="@+id/idnumber"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Input ID Number "
            android:paddingLeft="15dp"
            android:inputType="number"
            android:elevation="5dp"
            android:background="@drawable/btn"/>

        <EditText
            android:id="@+id/studentFName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Input Student First Name "
            android:paddingLeft="15dp"
            android:inputType="text"
            android:elevation="5dp"
            android:background="@drawable/btn"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/studentLName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Input Student Last Name "
            android:paddingLeft="15dp"
            android:inputType="text"
            android:elevation="5dp"
            android:background="@drawable/btn"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/addStudentInput"
            android:onClick="addtodb"

            android:text="Add Student"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"
            android:layout_margin="30dp"/>
        
        
    </LinearLayout>

</RelativeLayout>